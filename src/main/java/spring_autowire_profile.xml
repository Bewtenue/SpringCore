<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- con la siguiente linea se le dice a spring que se van a usar anotaciones -->
	<context:annotation-config></context:annotation-config>
	
	<bean id="student" class="com.softpath.beanstwo.Student">
		<property name="age" value="11"></property>
		<property name="name" value="Choche"></property>
	</bean>
	
	<bean id="student1" class="com.softpath.beanstwo.Student">
		<property name="age" value="26"></property>
		<property name="name" value="Jorge"></property>
	</bean>
	
	<bean id="student3" class="com.softpath.beanstwo.Student">
		<property name="age" value="15"></property>
		<property name="name" value="Roberto"></property>
	</bean>

	<bean id="profile" class="com.softpath.beanstwo.Profile"></bean>
	
	
</beans>